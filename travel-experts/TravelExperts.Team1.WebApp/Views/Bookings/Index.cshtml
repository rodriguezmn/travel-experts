@model IEnumerable<TravelExperts.Team1.WebApp.Models.BookingsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Booking Summary</h1>

<h1 class="text-center text-sm-center text-md-center text-lg-center text-xl-center">Booking Summary</h1>

<div class="row justify-content-center">
    <table class="table col-10 table-responsive">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.BookingId)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.ItineraryNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TripStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TripEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Destination)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.BookingId)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.ItineraryNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TripStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TripEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <th>
                        $@Html.DisplayFor(modelItem => item.TotalPrice)
                    </th>
                </tr>

            }
            @*Marlon Rodriguez
                Added bookings total row to table*@
            <tr>
                <td colspan="5"><h4>Bookings Total</h4></td>
                <td><h4>$@ViewBag.bookingsTotal</h4></td>
            </tr>

        </tbody>
    </table>
</div>
