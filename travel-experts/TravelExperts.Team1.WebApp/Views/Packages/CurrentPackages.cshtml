@model IEnumerable<TravelExperts.Team1.WebApp.Models.PackagesViewModel>

@{
    ViewData["Title"] = "Current Packages";
}

@*Irada: Display Package details with images in Business Card format*@

<h1 class="text-center text-sm-center text-md-center text-lg-center text-xl-center">Book the Trip of Your Dream! </h1>
<br />
<hr />

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4 col-sm-6">
        <div class="animation-element slide-up">
            <div class="card">
                <img class="card-img-top" src="~/img/@(Html.DisplayFor(modelItem => item.PkgImage)).jpg" alt="@Html.DisplayFor(modelItem => item.PkgImage)" />
                <div class="card-body lightcolor">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.PkgName)</h5>
                    <p class="card-text price"><strong>@Html.DisplayNameFor(model => model.PkgTotalPrice): </strong>@Html.DisplayFor(modelItem => item.PkgTotalPrice)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.PkgDesc)</p>
                    <p class="card-text dates">
                        <strong>@Html.DisplayNameFor(model => model.PkgStartDate):</strong> @Html.DisplayFor(modelItem => item.PkgStartDate)<br />
                        <strong>@Html.DisplayNameFor(model => model.PkgEndDate):</strong> @Html.DisplayFor(modelItem => item.PkgEndDate)
                    </p>
                </div>
                <div class="form-group right-align">
                    <input type="submit" value="Pick me!" class="btn btn-primary" />
                </div>
            </div>
            <br />
        </div>
    </div>
    }
</div>
